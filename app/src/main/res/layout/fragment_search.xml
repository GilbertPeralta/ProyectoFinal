<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".search">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/search_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/etSearch"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        ></ImageView>

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Busqueda"
        app:layout_constraintLeft_toRightOf="@id/ivSearch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        android:layout_marginVertical="10dp"
        ></Button>

    <ImageView
        android:id="@+id/ivSearch2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/translucent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBuscar"
        ></ImageView>

    <TextView
        android:id="@+id/tvNombreProductotag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre de Producto:"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvNombreProducto"
        app:layout_constraintTop_toBottomOf="@id/ivSearch2"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvNombreProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/tvNombreProductotag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSearch2"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvPreciotag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio:"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvPrecio"
        app:layout_constraintTop_toBottomOf="@id/tvNombreProductotag"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/tvPreciotag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreProducto"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvDescripciontag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvDescripcion"
        app:layout_constraintTop_toBottomOf="@id/tvPreciotag"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/tvDescripciontag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrecio"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvCalificaciontag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calificacion:"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvCalificacion"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        android:layout_marginVertical="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tvCalificacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@id/tvCalificaciontag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescripciontag"
        android:layout_marginVertical="10dp"
        ></TextView>





</androidx.constraintlayout.widget.ConstraintLayout>